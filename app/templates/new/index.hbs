<div class="row">
	<div class="col-xs-4 col-md-2">
		{{sniffy-user user=session.user size="lg"}}
	</div>
	<div class="col-xs-8 col-md-10">
		<form {{action create on="submit"}} role="form">
			<ul class="list-group">
				<li class="list-group-item">
					<div class="input-group">
						{{input value=what placeholder="What?"}}
						<span class="input-group-btn">
							{{#link-to "new.what"}}
								{{sniffy-icon type="arrow-right"}}
							{{/link-to}}
						</span>
					</div>
				</li>
				
				<li class="list-group-item">
					<div class="input-group">
						{{input value=where placeholder="Where?"}}
						<span class="input-group-btn">
							{{#link-to "new.where"}}
								{{sniffy-icon type="arrow-right"}}
							{{/link-to}}
						</span>
					</div>
				</li>
				<li class="list-group-item">
					{{input value=when type="date" placeholder="When?"}}
				</li>
				{{#link-to "new.who" classNames="list-group-item"}}
					<ul class="list-inline">
						{{#each invitee in invitees}}
							<li>
								{{sniffy-user user=invitee size="sm"}}
							</li>
						{{else}}
							<li class="text-muted">Who?</li>
						{{/each}}
					</ul>
					{{sniffy-icon type="arrow-right"}}
				{{/link-to}}
			</ul>
		</form>
	</div>	
</div>


