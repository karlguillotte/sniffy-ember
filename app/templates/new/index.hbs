<ul>
	<li>{{#link-to "new.what"}}What::{{what}}{{/link-to}}</li>
	<li>{{#link-to "new.where"}}Where::{{where}}{{/link-to}}</li>
	<li>{{input type="date" value=when placeholder="When?"}}::{{format-date when}}</li>
	<li>{{#link-to "new.who"}}Who::({{invitations.length}})
		<ul>
			{{#each invitee in invitees}}
			<li>{{invitee}}</li>
			{{/each}}
		</ul>
	{{/link-to}}</li>
</ul>
<button {{action create}} class="btn">Sniffy!</button>